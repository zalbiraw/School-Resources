#include<stdio.h>
#include<string.h>

int main(void)
{
	char tmp1[40], tmp2[40], colors[] = "Red Green Blue";
	strncpy(tmp1, &colors[4], 5);
	tmp1[5] = '\0';
	strcat(tmp1, " ");
	strncpy(tmp2, colors, 3);
	tmp2[3] = '\0';
	printf("%s\n", strcat(tmp1, tmp2));
	return 0;
}

#include<stdio.h>
#include<string.h>

#define TOUPPER(c) ('a' <= (c) && (c) <='z'? (c)-'a'+'A':(c))

int main (void)
{
	char s [10];
	int i=0;
	strcpy(s, "abcde");
	putchar(TOUPPER(s[++i]));

	strcpy(s, "01234");
	i=0;
	putchar(TOUPPER(s[++i]));

	i=0;
	strcpy(s, "abcde");
	putchar(TOUPPER(s[i++]));

	strcpy(s, "01234");
	i=0;
	putchar(TOUPPER(s[i++]));

	return 0;
}
